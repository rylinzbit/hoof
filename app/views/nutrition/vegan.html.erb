<div id="base2" class="base">
	<div id="vegan_base">
		<div class="container">
			<div class="row">
				<div id="nav_btns" class="col l4">
					<a href="/nutrition" class="waves-effect waves-light btn">Nutrition Home</a>
					<a href="/homepages/<%= session[:user_id] %>" class="waves-effect waves-light btn">Home Page</a>
					<a href="/sessions/destroy" class="waves-effect waves-light btn">Log Out</a>
				</div>
				<img src="/assets/vegan_banner" id="banner" class="responsive-img left z-depth-1">
				<h1 class="col l4 z-depth-3">Living<span id="title">Vegan</span></h1>
				<div id="vegan_back" class="bottom_half col l12">
					<% @vegan.each do |v| %>
						<div class="row">
							<div class="post col l8 offset-l2">
								<h4><%= v.title %></h4>
								<p class="col l10 offset-l2 author"><%= v.author %></p>
								<p class="col l11 offset-l1 flow-text content"><%= v.content %></p>
							</div>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>